@model LocalConnWeb.ViewModels.HotelDetailsVM
@{
    ViewBag.Title = "HotelBookingDtl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ================================
    START BREADCRUMB AREA
================================= -->
<section class="breadcrumb-area bread-bg-10">
    <div class="breadcrumb-wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content text-center">
                        <div class="section-heading">
                            <h2 class="sec__title text-white">Cart</h2>
                        </div>
                        <span class="arrow-blink">
                            <i class="la la-arrow-down"></i>
                        </span>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end breadcrumb-wrap -->
    <div class="bread-svg-box">
        <svg class="bread-svg" xmlns="#" viewBox="0 0 100 10" preserveAspectRatio="none"><polygon points="100 0 50 10 0 0 0 10 100 10"></polygon></svg>
    </div><!-- end bread-svg -->
</section><!-- end breadcrumb-area -->
<!-- ================================
    END BREADCRUMB AREA
================================= -->
<!-- ================================
    START BOOKING AREA
================================= -->
<section class="booking-area padding-top-100px padding-bottom-70px">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="form-box">
                    <div class="form-title-wrap">
                        <h3 class="title">Your Personal Information</h3>
                    </div><!-- form-title-wrap -->
                    <div class="form-content ">
                        <div class="contact-form-action">
                            <form method="post" action="/home/paynow">
                                @Html.HiddenFor(x => x.preBookDtls.HotelID)
                                @Html.HiddenFor(x => x.preBookDtls.FinalFare)
                                @Html.HiddenFor(x => x.preBookDtls.RoomSelect)
                                @Html.HiddenFor(x => x.preBookDtls.AdultSelect)
                                @Html.HiddenFor(x => x.preBookDtls.ChildrenSelect)
                                @Html.HiddenFor(x => x.preBookDtls.BookingFrom)
                                @Html.HiddenFor(x => x.preBookDtls.BookingUpto)
                                @Html.HiddenFor(x => x.preBookDtls.CustDetails)
                                @Html.HiddenFor(x => x.selectedRoomType)


                                <div class="row">
                                    <div class="col-lg-12 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">Guest Name</label>
                                            <div class="form-group">
                                                <span class="la la-user form-icon"></span>
                                                @Html.TextBoxFor(x => x.preBookDtls.CustName, new { @class = "form-control", @placeholder = "Guest Name" })
                                                @Html.ValidationMessageFor(m => m.preBookDtl.CustName)
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">Your Email</label>
                                            <div class="form-group">
                                                <span class="la la-envelope-o form-icon"></span>
                                                @Html.TextBoxFor(x => x.preBookDtls.CustEmail, new { @class = "form-control", @placeholder = "Email ID" })
                                                @Html.ValidationMessageFor(m => m.preBookDtl.CustEmail)
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->
                                    <div class="col-lg-6 responsive-column">
                                        <div class="input-box">
                                            <label class="label-text">Phone Number</label>
                                            <div class="form-group">
                                                <span class="la la-phone form-icon"></span>
                                                @Html.TextBoxFor(x => x.preBookDtls.CustPhNo, new { @class = "form-control", @placeholder = "Mobile Name" })
                                                @Html.ValidationMessageFor(m => m.preBookDtl.CustPhNo)
                                            </div>
                                        </div>
                                    </div><!-- end col-lg-6 -->



                                </div>
                                <div class="row alert alert-secondary p-2">
                                    <div class="col-md-8 col-sm-12">
                                        <h3 class="text-primary pt-2"><i class="la la-rupee"></i>Total Price: @Model.preBookDtls.FinalFare/-</h3>
                                    </div>   <!-- end col-lg-8 -->
                                    <div class="col-md-4 col-sm-12">
                                        <div class="btn-box">
                                            @if (!(User.Identity.IsAuthenticated))
                                            {
                                                <button class="theme-btn float-right" type="submit">
                                                    Login to book your stay
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="theme-btn float-right" type="submit">Confirm Booking</button>
                                            }

                                        </div>
                                    </div>   <!-- end col-lg-4 -->
                                </div>

                            </form>
                        </div><!-- end contact-form-action -->
                    </div><!-- end form-content -->
                </div><!-- end form-box -->
                <div class="form-box">
                    <div class="form-title-wrap">
                        <h3 class="title">Payment Options</h3>
                    </div><!-- form-title-wrap -->
                    <div class="form-content">
                        <div class="section-tab check-mark-tab text-center pb-4">
                            <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link border-primary" id="credit-card-tab" data-toggle="tab" href="#credit-card" role="tab" aria-controls="credit-card" aria-selected="false">
                                        @*<i class="la la-check icon-element"></i>*@
                                        <img src="~/Content/WebCss/css/images/payment-img.png" alt="">
                                        <span class="d-block pt-2 ">Payment with <br />debit/credit card</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  border-primary" id="paypal-tab" data-toggle="tab" href="#paypal" role="tab" aria-controls="paypal" aria-selected="true">
                                        @*<i class="la la-check icon-element"></i>*@
                                        <img src="~/Content/WebCss/css/images/UIP-img.png" alt="">
                                        <span class="d-block pt-2 "><br />Payment with UPI</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link  border-primary" id="payoneer-tab" data-toggle="tab" href="#payoneer" role="tab" aria-controls="payoneer" aria-selected="true">
                                        @*<i class="la la-check icon-element"></i>*@
                                        <img src="~/Content/WebCss/css/images/internet-img.png" alt="">
                                        <span class="d-block pt-2">Payment with <br />Internet Banking</span>
                                    </a>
                                </li>
                            </ul>
                        </div><!-- end section-tab -->

                    </div><!-- end form-content -->
                </div><!-- end form-box -->
            </div><!-- end col-lg-8 -->
            <div class="col-lg-4">
                <div class="form-box booking-detail-form">
                    <div class="form-title-wrap">
                        <h3 class="title">Booking Details</h3>
                    </div><!-- end form-title-wrap -->
                    <div class="form-content">
                        <div class="card-item shadow-none radius-none mb-0">
                            <div class="card-img pb-4">
                                <a href="hotel-single.html" class="d-block">
                                    <img src="@Model.hotelDtl.PhotoThumbPath" alt="@Model.hotelDtl.HotelName">
                                </a>
                            </div>
                            <div class="card-body p-0">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h3 class="card-title">@Model.hotelDtl.HotelName</h3>
                                        <p class="card-meta">@Model.hotelDtl.HotelAddress</p>
                                    </div>
                                    <div>
                                        <a href="/home/hoteldetails/@Model.hotelDtl.HotelID" class="btn ml-1"><i class="la la-edit" data-toggle="tooltip" data-placement="top" title="Edit"></i></a>
                                    </div>
                                </div>
                                @*<div class="card-rating">
                                        <span class="badge text-white">4.4/5</span>
                                        <span class="review__text">Average</span>
                                        <span class="rating__text">(30 Reviews)</span>
                                    </div>*@
                                <div class="section-block"></div>
                                <ul class="list-items list-items-2 py-2">
                                    <li><span>Check in:</span>@Model.preBookDtls.BookingFrom.ToString("dd MMM yyyy")</li>
                                    <li><span>Check out:</span>@Model.preBookDtls.BookingUpto.ToString("dd MMM yyyy")</li>
                                </ul>
                                <div class="section-block"></div>
                                <h3 class="card-title pt-3 pb-2 font-size-15"><a href="hotel-single.html">Order Details</a></h3>
                                <div class="section-block"></div>
                                <ul class="list-items list-items-2 py-3">
                                    <li><span>Room Type:</span>@Model.selectedRoomType</li>
                                    <li><span>Room:</span>@Model.preBookDtls.RoomSelect</li>
                                    <li><span>Adults:</span>@Model.preBookDtls.AdultSelect Adult(s)</li>
                                    <li><span>Child:</span>@Model.preBookDtls.ChildrenSelect Child(s)</li>
                                    @*<li><span>Stay:</span>4 Nights</li>*@
                                    @foreach (var item in Model.amenitesDisplay)
                                    {

                                        <li>
                                            <div class="d-flex flex-nowrap bd-highlight">
                                                <div class="order-3 pl-4 bd-highlight">@item/-</div>
                                                <div class="order-1 bd-highlight text-dark font-weight-medium">Add On:</div>
                                            </div>

                                            @*<span>:</span>@item'*@
                                        </li>
                                    }
                                </ul>
                                <div class="section-block"></div>
                                <ul class="list-items list-items-2 pt-3">

                                    @*<li><span>Sub Total:</span>$240</li>
                                        <li><span>Taxes And Fees:</span>$5</li>*@
                                    <li class="text-primary"><span>Total Price:</span><h3><i class="la la-rupee"></i>@Model.preBookDtls.FinalFare</h3></li>
                                </ul>
                            </div>
                        </div><!-- end card-item -->
                    </div><!-- end form-content -->
                </div><!-- end form-box -->
            </div><!-- end col-lg-4 -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end booking-area -->
<!-- ================================
    END BOOKING AREA
================================= -->

<div class="section-block"></div>
