<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="OffRoadsTravel | Travel Agency & Tourism">
    <meta name="keyword" content="travel, tourism, agency, tourist">
    <meta name="author" content="Themescare">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@

    <!-- Template CSS Files -->

    <link href="~/Content/WebCss/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/bootstrap-select.min.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/line-awesome.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/owl.theme.default.min.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/jquery.fancybox.min.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/daterangepicker.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/animate.min.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/animated-headline.css" rel="stylesheet" />
    <link href="~/Content/WebCss/css/flag-icon.min.css" rel="stylesheet" /> 
    <link href="~/Content/WebCss/css/style.css" rel="stylesheet" />  
    @*<link href="~/Content/font-awesome.min.css" rel="stylesheet" />*@
    <style type="text/css">
        .ellipsis {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
  

</head>
<body>
    <!-- start cssload-loader -->
    <div class="preloader" id="preloader">
        <div class="loader">
            <svg class="spinner" viewBox="0 0 50 50">
                <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle>
            </svg>
        </div>
    </div>
    <!-- ================================
                START HEADER AREA
    ================================= -->
    <header class="header-area">
        <div class="header-menu-wrapper padding-right-100px padding-left-100px">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="menu-wrapper justify-content-between">
                            <a href="#" class="down-button"><i class="la la-angle-down"></i></a>
                            <div class="logo">
                                <a href="/home/index"><img src="/Content/img/logo1.jpg" alt="logo"></a>
                                <div class="menu-toggler">
                                    <i class="la la-bars"></i>
                                    <i class="la la-times"></i>
                                </div><!-- end menu-toggler -->
                            </div><!-- end logo -->
                            <div class="main-menu-content pr-0 ml-0">
                                <nav>
                                    <ul>
                                        <li>
                                            <a href="/Home/Index">Home</a>
                                        </li>

                                        <li>
                                            <a href="#">Popular Cities <i class="la la-angle-down"></i></a>
                                            @{ Html.RenderAction("RenderCitiesMenuView", "home", new { area = "" });}
                                        </li>

                                        <li>
                                            <a href="/home/about">About Us</a>
                                        </li>
                                        <li>
                                            <a href="/home/contact">Contact</a>
                                        </li>
                                        <li>
                                            @if ((string)@ViewBag.CurrentUserName != null && User.IsInRole("Admin"))
                                            {
                                                <a href="#" class="text-primary">Welcome @ViewBag.CurrentUserName <i class="la la-angle-down"></i></a>
                                                <ul class="dropdown-menu-item">
                                                    <li>  <a href="/user/dashboard" class="dropdown-item  text-primary">Dashboard<i class="la la-dashboard"></i></a></li>
                                                    <li>
                                                        <form method="post" action="@Url.Action("logoff", "account", new { @Area = "" })" id="logOut">
                                                            @Html.AntiForgeryToken()
                                                            <a href="javascript:document.getElementById('logOut').submit()" class="dropdown-item text-primary">Log Out<i class="la la-lock-open float-left"></i></a>
                                                        </form>
                                                    </li>
                                                </ul>

                                            }
                                            else if ((string)@ViewBag.CurrentUserName != null && User.IsInRole("Customer"))
                                            {
                                                <a href="#" class="text-primary">Welcome @ViewBag.CurrentUserName <i class="la la-angle-down"></i></a>
                                                <ul class="dropdown-menu-item">
                                                    <li> <a href="/Home/OrderList" class="dropdown-item text-primary">Order List<i class="la la-list float-left"></i></a></li>
                                                    <li>
                                                        <form method="post" action="@Url.Action("logoff", "account", new { @Area = "" })" id="logOut">
                                                            @Html.AntiForgeryToken()
                                                            <a href="javascript:document.getElementById('logOut').submit()" class="dropdown-item text-primary">Log Out<i class="la la-lock-open float-left"></i></a>
                                                        </form>
                                                    </li>
                                                </ul>
                                            }
                                            else if (User.Identity.IsAuthenticated)
                                            {
                                                using (Html.BeginForm("LogOff", "account", new { @Area = "" }, FormMethod.Post))
                                                {
                                                    @Html.AntiForgeryToken()
                                                }
                                                <a href="/account/login" class="text-primary">Login|Register</a>
                                            }
                                            else
                                            {
                                                <a href="/account/login" class="text-primary">Login|Register</a>
                                            }

                                        </li>
                                    </ul>
                                </nav>
                            </div><!-- end main-menu-content -->
                            @*<div class="nav-btn">
                                


                            </div>*@<!-- end nav-btn -->
                        </div><!-- end menu-wrapper -->
                    </div><!-- end col-lg-12 -->
                </div><!-- end row -->
            </div><!-- end container-fluid -->
        </div><!-- end header-menu-wrapper -->
    </header>
    <!-- ================================
             END HEADER AREA
    ================================= -->
    <!-- ================================
        START BREADCRUMB AREA
    ================================= -->
    <section class="breadcrumb-area bread-bg">
        <div class="breadcrumb-wrap">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="breadcrumb-content">
                            <div class="section-heading">
                                <h2 class="sec__title text-white">Local Connection</h2>
                            </div>
                        </div><!-- end breadcrumb-content -->
                    </div><!-- end col-lg-6 -->
                    @*<div class="col-lg-6">
                            <div class="breadcrumb-list text-right">
                                <ul class="list-items">
                                    <li><a href="index.html">Home</a></li>
                                    <li>Tour</li>
                                    <li>Tour Grid</li>
                                </ul>
                            </div>
                        </div>*@
                    <!-- end col-lg-6 -->
                </div><!-- end row -->
            </div><!-- end container -->
        </div><!-- end breadcrumb-wrap -->
        <div class="bread-svg-box">
            <svg class="bread-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 10" preserveAspectRatio="none"><polygon points="100 0 50 10 0 0 0 10 100 10"></polygon></svg>
        </div><!-- end bread-svg -->
    </section><!-- end breadcrumb-area -->
    <!-- ================================
        END BREADCRUMB AREA
    ================================= -->
    <!-- end modal-shared -->
    <div class="modal-popup">
        <div class="modal fade" id="loginPopupForm" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <div>
                            @*<h5 class="modal-title title" id="exampleModalLongTitle2">Login</h5>*@
                            <img src="~/Content/img/logos.png" style="width: 50%;height:auto;" />
                            <p class="font-size-14">Hello! Welcome to Local Connection</p>
                        </div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" class="la la-close"></span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="contact-form-action">
                            <form method="post">
                                <div class="input-box">
                                    <img src="~/Content/img/LOGINbg.png" style="width:100%; height:auto;" />
                                </div><!-- end input-box -->
                                <div class="btn-box pt-3 pb-4">
                                    <a class="theme-btn w-100 text-center text-light" href="/account/login">Login/SignUp</a>
                                </div>
                                <div class="action-box text-center">
                                    <a href="#" name="eventId" id="eventId" class="font-size-14">>> I would like to login later</a>
                                </div>
                            </form>
                        </div><!-- end contact-form-action -->
                    </div>
                </div>
            </div>
        </div>
    </div><!-- end modal-popup -->


    <div>
        @RenderBody()
    </div>

    <!-- Template JS Files -->

    <script src="~/Content/WebCss/js/jquery-3.4.1.min.js"></script>
    <script src="~/Content/WebCss/js/jquery-ui.js"></script>
    <script src="~/Content/WebCss/js/popper.min.js"></script>
    <script src="~/Content/WebCss/js/bootstrap.min.js"></script>
    <script src="~/Content/WebCss/js/bootstrap-select.min.js"></script>
    <script src="~/Content/WebCss/js/moment.min.js"></script>
    <script src="~/Content/WebCss/js/daterangepicker.js"></script>
    <script src="~/Content/WebCss/js/owl.carousel.min.js"></script>
    <script src="~/Content/WebCss/js/jquery.fancybox.min.js"></script>
    <script src="~/Content/WebCss/js/jquery.countTo.min.js"></script>
    <script src="~/Content/WebCss/js/animated-headline.js"></script>
    <script src="~/Content/WebCss/js/jquery.ripples-min.js"></script>
    <script src="~/Content/WebCss/js/main.js"></script>


    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</body>
</html>
