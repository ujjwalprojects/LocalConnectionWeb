@model LocalConnWeb.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ================================
    START BREADCRUMB AREA
================================= -->
<section class="breadcrumb-area bread-bg-10">
    <div class="breadcrumb-wrap">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content text-center">
                        <div class="section-heading">
                            <h2 class="sec__title text-white">Sign Up</h2>
                        </div>
                        <span class="arrow-blink">
                            <i class="la la-arrow-down"></i>
                        </span>
                    </div><!-- end breadcrumb-content -->
                </div><!-- end col-lg-12 -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end breadcrumb-wrap -->
    <div class="bread-svg-box">
        <svg class="bread-svg" xmlns="#" viewBox="0 0 100 10" preserveAspectRatio="none"><polygon points="100 0 50 10 0 0 0 10 100 10"></polygon></svg>
    </div><!-- end bread-svg -->
</section><!-- end breadcrumb-area -->
<!-- ================================
    END BREADCRUMB AREA
================================= -->
<!-- ================================
    START CART AREA
================================= -->
<section class="cart-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-3">
                <div class="cart-wrap">

                    <div class="form-box">

                        <div class="section-block"></div>
                        <div class="form-title-wrap">
                            <h3 class="title"><i class="la la-user mr-2 text-gray"></i>Sign Up</h3>
                        </div><!-- form-title-wrap -->

                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="row form-content contact-form-action">
                                <div class="col-12 responsive-column">
                                    <div class="input-box">
                                        <label class="label-text">Profile Name</label>
                                        <div class="form-group">
                                            <span class="la la-user form-icon"></span>
                                            @Html.TextBoxFor(x => x.ProfileName, new { @class = "form-control", @placeholder = "Profile Name" })
                                            @Html.ValidationMessageFor(m => m.ProfileName)
                                        </div>
                                    </div>

                                    <div class="input-box">
                                        <label class="label-text">Mobile No</label>
                                        <div class="form-group">
                                            <span class="la la-phone form-icon"></span>
                                            @Html.TextBoxFor(x => x.MobileNo, new { @class = "form-control", @placeholder = "Mobile Number" })
                                            @Html.ValidationMessageFor(m => m.MobileNo)
                                        </div>
                                    </div>
                                    <div class="input-box">
                                        <label class="label-text">Email ID</label>
                                        <div class="form-group">
                                            <span class="la la-envelope form-icon"></span>
                                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email ID" })
                                            @Html.ValidationMessageFor(m => m.Email)
                                        </div>
                                    </div>
                                    <div class="input-box">
                                        <label class="label-text"> Password</label>
                                        <div class="form-group">
                                            <span class="la la-lock form-icon"></span>
                                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                        </div>
                                    </div>
                                </div><!-- end col-lg-6 -->

                            </div><!-- end form-content -->
                            <div class="btn-box text-center pt-4"style="padding-bottom:15px;">
                                <input type="Submit" value="Sign Up" class="theme-btn" />
                            </div>
                         

                        }

                    </div><!-- end form-box -->

                </div>
            </div><!-- end cart-wrap -->
        </div><!-- end col-lg-12 -->
    </div><!-- end row -->
</section><!-- end cart-area -->
<!-- ================================
    END CART AREA
================================= -->



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
