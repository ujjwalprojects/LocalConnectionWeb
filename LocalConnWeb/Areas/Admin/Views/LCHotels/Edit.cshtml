    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    long stateid = Model.LCHotel == null ? 0 : Model.LCHotel.StateID;
    long cityid = Model.LCHotel == null ? 0 : Model.LCHotel.CityID;
