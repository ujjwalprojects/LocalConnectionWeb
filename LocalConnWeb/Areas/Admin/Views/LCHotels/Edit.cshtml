                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">@Html.CheckBoxFor(m => m.LCHotel.IsActive) &nbsp;Enable Hotel</label>
                    </div>
                </div>
            </div>
            <div class="action-div">
                @Html.ActionLink("Back To List", "index", "lchotels", new { Area = "Admin" }, new { @class = "btn btn-secondary btn-sm" })
                @Html.ActionLink("Next", "AddRoomType", "lchotels", new { Area = "Admin", id = Model.LCHotel.HotelID }, new { @class = "btn btn-success btn-sm pull-right ml-2 " })
                <button type="submit" class="btn btn-sm btn-primary pull-right"><i class="fa fa-save"></i> Save</button>

            </div>
        }
    </div>
</div>
