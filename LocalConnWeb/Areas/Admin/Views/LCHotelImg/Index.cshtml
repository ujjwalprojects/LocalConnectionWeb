@model LocalConnWeb.Areas.Admin.CustomModels.LCHotelImageVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="title-div">
    <i class="fa fa-hand-o-right"></i>&nbsp;
    <span class="title">Hotel - Images</span>&nbsp;
</div>
<div class="card bg-light">
    <div class="card-header bg-head">
        <div class="pb-2">
            <span class="display-5 text-white">@Model.HotelDetails.HotelName</span> 
        </div>
    </div>
    <div class="card-body">
        <div>
            <a class="btn btn-primary btn-sm pull-right" href="/admin/lchotelimg/add/@Model.HotelDetails.HotelID"><i class="fa fa-plus-circle"></i> Add Image</a>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
        @Html.Partial("_pvHotelImageList", Model)
    </div>
</div>


